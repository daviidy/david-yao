<section id="portfolio" class="container-fluid pt-5 pb-5 bg-light">
    <div class="row spacing">
      
      <% @projects.each do |project| %>
        <div class="col-12 mb-5 p-5">
          <div class="project bg-white p-3 row">
            <img class="rounded img-fluid col-sm-6" src=<%= project.image %> alt=<%= project.title %>>
            <div class="card-body col-sm-6">
              <h4 class="card-title font-weight-bold"><%= project.title %></h4>
              <div class="d-inline-flex">
                <p class="text-uppercase m-2 font-weight-bold">
                  <%= project.company %>
                </p>
                <p class="m-2">
                  <i class="fas fa-circle"></i>
                  <%= project.position.title %>
                </p>
                <p class="m-2">
                  <i class="fas fa-circle"></i>
                  <%= project.start_year %> - <%= project.end_year %>
                </p>
              </div>
              <p class="card-text mb-3">
                <%= project.short_desc %>
              </p>
              <div class="d-inline-flex flex-wrap mb-3">
                
                <% project.skills.each do |skill| %>
                  <span class="badge background-primary-light primary text-lowercase m-2"><%= skill.title %></span>
                <% end %>
                
              </div>
              <div class="">
                <button href="#" class="project-cta p-2 primary" data-toggle="modal" data-target="#project<%= project.id %>">
                  See Project
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      
      
    </div>
  </section>
  <section id="about" class="container-fluid bg-white p-5">
