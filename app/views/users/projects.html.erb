                    <p class="text-uppercase m-2 font-weight-bold">
                    <%= project.company %>
                    </p>
                    <p class="m-2">
                    <i class="fas fa-circle"></i>
                    <%= project.position.title %>
                    </p>
                    <p class="m-2">
                    <i class="fas fa-circle"></i>
                    <%= project.start_year %> - <%= project.end_year %>
                    </p>
                </div>
                </div>
                <img class="rounded img-fluid col-12" src="<%= project.image %>" alt="<%= project.title %>">
                <div class="row">
                <div class="col-8">
                    <p>
                    <%= project.long_desc %>
                    </p>
                </div>
                <div class="col-4">
                    <div class="d-inline-flex flex-wrap mb-3 pb-3 border-bottom w-100">
                      
                      <% project.skills.each do |skill| %>
                        <span class="badge background-primary-light primary text-lowercase m-2"><%= skill.title %></span>
                      <% end %>
                      
