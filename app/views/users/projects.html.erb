            Skills
          </h5>
          <i class="fas fa-angle-down"></i>
        </div>
        <div class="collapse mb-3" id="skills">
          <div class="d-sm-flex flex-wrap">
            
            <% @skills.each do |skill| %>
              <div class="skill d-inline-flex flex-wrap d-sm-block rounded bg-light mt-3 align-items-center">
                <img width="50" class="m-2 img-fluid rounded" src="<%= skill.image %>" alt="<%= skill.title %>">
                <p class="m-2 font-weight-bold"><%= skill.title %></p>
              </div>
            <% end %>
            
          </div>
        </div>

        <!-- Databases -->
        <div class="d-flex justify-content-between border-bottom mb-3" data-toggle="collapse" data-target="#databases">
          <h5 class="skill-title font-weight-bold">
            Databases
          </h5>
          <i class="fas fa-angle-down"></i>
        </div>
        <div class="collapse mb-3" id="databases">
          <div class="d-sm-flex flex-wrap">
            <% @databases.each do |database| %>
              <div class="skill d-inline-flex flex-wrap d-sm-block rounded bg-light mt-3 align-items-center">
                <img width="50" class="m-2 img-fluid rounded" src="<%= database.image %>" alt="<%= database.title %>">
                <p class="m-2 font-weight-bold"><%= database.title %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>

  
  <% @projects.each do |project| %>
    
  
  <div class="modal" id="project<%= project.id %>">
        <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
