          <i class="fas fa-angle-down"></i>
        </div>
        <div class="collapse mb-3" id="languages">
          
          <div class="d-sm-flex flex-wrap">
            <% @languages.each do |language| %>
              <div class="skill d-inline-flex flex-wrap d-sm-block rounded bg-light mt-3 align-items-center">
                <img width="50" class="m-2 img-fluid rounded" src="<%= language.image %>" alt="<%= language.title %>">
                <p class="m-2 font-weight-bold"><%= language.title %></p>
              </div>
            <% end %>
          </div>
          
        </div>

        <!-- Frameworks -->
        <div class="d-flex justify-content-between border-bottom mb-3" data-toggle="collapse" data-target="#frameworks">
          <h5 class="skill-title font-weight-bold">
            Frameworks and tools
          </h5>
          <i class="fas fa-angle-down"></i>
        </div>
        <div class="collapse mb-3" id="frameworks">
          <div class="d-sm-flex flex-wrap">
            
            <% @frameworks.each do |framework| %>
              <div class="skill d-inline-flex flex-wrap d-sm-block rounded bg-light mt-3 align-items-center">
                <img width="50" class="m-2 img-fluid rounded" src="<%= framework.image %>" alt="<%= framework.title %>">
