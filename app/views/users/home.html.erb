<% content_for :title do %>
  Projects
<% end %>

<div class="row justify-content-center">
    <% @projects.each do |project| %>
        <div class="col-12 col-md-3 border rounded p-3 list-item">
            <div class="item-img d-flex flex-wrap justify-content-between">
                <img class="img-fluid rounded-circle" style="width: 10%;" src="https://cdn.loom.com/avatars/4812981_a5e2e546af88de880e5413c7a108f263_192.jpg" alt="">
                <div class="actions d-flex flex-wrap justify-content-between">
                <%= link_to project_path(project), method: :delete, data: {confirm: "Really delete the project?"} do %>
                    <i class="far fa-trash-alt"></i>
                <% end %>
                <%= link_to edit_project_path(project) do %>
                    <i class="far fa-edit"></i>
                <% end %>
                </div>
            </div>
            <div class="infos">
                <p class="font-weight-bold mb-3 mt-3">
                    <%=project.title%>
                </p>
                <p class="text-secondary">
                    <%=project.short_desc%>
                </p>
            </div>
        </div>
    <% end %>
</div>